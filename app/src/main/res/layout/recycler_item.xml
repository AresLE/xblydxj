<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:visibility="visible"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:id="@+id/date_card"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="5dp"
        app:cardBackgroundColor="@color/md_teal_200_color_code"
        app:cardCornerRadius="3dp"
        app:cardElevation="5dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/android_ic_clock"
            android:gravity="center_vertical"
            android:paddingBottom="2dp"
            android:paddingEnd="15dp"
            android:id="@+id/date"
            android:paddingStart="15dp"
            android:paddingTop="2dp"
            android:text="@string/time"
            android:textColor="@color/md_white_color_code"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        app:cardBackgroundColor="@color/md_white_color_code"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:cardCornerRadius="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/describe"
                android:drawablePadding="5dp"
                android:layout_margin="5dp"
                android:textColor="@color/md_black_color_code"
                android:drawableStart="@drawable/android_ic_android"
                android:gravity="center_vertical"
                android:maxLines="1"
                android:paddingBottom="5dp"
                android:paddingStart="10dp"
                android:paddingTop="7dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:id="@+id/author"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginBottom="5dp"
                android:layout_marginEnd="10dp"
                android:drawablePadding="2dp"
                android:drawableStart="@drawable/android_id_author"
                android:gravity="center"
                android:textColor="@color/md_black_color_code"
                android:text="ayanamist"
                android:textSize="12sp"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

