<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_marginTop="5dp"
    app:cardBackgroundColor="@color/md_white_color_code"
    app:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <TextView
            android:id="@+id/describe"
            android:layout_width="290dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/item_ic_android"
            android:gravity="center_vertical"
            android:paddingBottom="5dp"
            android:paddingStart="10dp"
            android:paddingTop="7dp"
            android:singleLine="true"
            android:textColor="@color/md_black_color_code"
            />

        <TextView
            android:id="@+id/author"
            android:layout_width="wrap_content"

            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_gravity="right"
            android:layout_marginBottom="5dp"
            android:layout_marginEnd="10dp"
            android:drawablePadding="2dp"
            android:drawableStart="@drawable/item_id_author"
            android:gravity="center"
            android:text="ayanamist"
            android:textColor="@color/md_black_color_code"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:drawablePadding="5dp"
            android:drawableStart="@drawable/item_ic_date"
            android:gravity="center_vertical"
            android:paddingBottom="2dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:textSize="12sp"
            android:paddingTop="2dp"
            android:text="@string/time"
            android:textColor="@color/md_black_color_code"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>

